{
    "manifest_version": 3,
    "name": "WCL timestamp format converter",
    "description": "Convert timestamps on WarcraftLogs from am/pm to 24-hour format.",
    "version": "1.0.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "WCL timestamp format converter"
    },
    "host_permissions": [
        "http://*.warcraftlogs.com/*",
        "https://*.warcraftlogs.com/*"
    ],
    "background": {
        "service_worker": "js/background.js"
    }
}
